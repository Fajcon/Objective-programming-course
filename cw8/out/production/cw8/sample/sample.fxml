<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="600.0" prefWidth="800.0">
         <children>
            <ListView fx:id="dataView" layoutX="28.0" layoutY="97.0" prefHeight="480.0" prefWidth="728.0" />
            <Button fx:id="connectButton" layoutX="28.0" layoutY="14.0" mnemonicParsing="false" onAction="#connectWithDataBase" text="Connect with dataBase" />
            <Button fx:id="viewButton" layoutX="205.0" layoutY="14.0" mnemonicParsing="false" onAction="#viewData" text="View All Data" />
            <Button fx:id="searchByAuthorButton" layoutX="327.0" layoutY="14.0" mnemonicParsing="false" onAction="#searchByAuthor" text="Search by author" />
            <TextField fx:id="authorText" layoutX="544.0" layoutY="14.0" />
            <Label layoutX="479.0" layoutY="19.0" prefHeight="16.0" prefWidth="56.0" text="Author:" />
            <Button fx:id="searchByIsbnButton" layoutX="327.0" layoutY="53.0" mnemonicParsing="false" onAction="#searchByIsbn" prefHeight="26.0" prefWidth="130.0" text="Search by ISBN" />
            <Label layoutX="479.0" layoutY="58.0" prefHeight="16.0" prefWidth="56.0" text="ISBN:" />
            <TextField fx:id="isbnText" layoutX="544.0" layoutY="53.0" />
            <Button layoutX="28.0" layoutY="53.0" mnemonicParsing="false" onAction="#addBook" prefHeight="26.0" prefWidth="137.0" text="Add book" />
         </children></Pane>
   </children>
</GridPane>
